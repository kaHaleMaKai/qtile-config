############################################################

shadow = {{ shadow }};
shadow-radius = {{ shadow_radius }};
shadow-offset-x = {{ shadow_offset }};
shadow-offset-y = {{ shadow_offset }};
shadow-opacity = {{ shadow_opacity }};
shadow-red = 0.0;
shadow-green = 0.0;
shadow-blue = 0.0;
shadow-exclude = [ {% for item in shadow_excludes -%}
  {%- if "class" in item -%}
  {%- set type = "class_g" -%}
  {%- set value = item.class -%}
  {%- elif "class_0" in item -%}
  {%- set type = "class_i" -%}
  {%- set value = item.class_i -%}
  {%- elif "name" in item -%}
  {%- set type = "name" -%}
  {%- set value = item.name -%}
  {%- elif "role" in item -%}
  {%- set type = "role" -%}
  {%- set value = item.role -%}
  {%- endif -%}
  "{{ type  }} {{ item.op|default('=') }} '{{ value }}'"{{ ', ' if not loop.last else '' }}
{%- endfor %} ];
shadow-ignore-shaped = false;
xinerama-shadow-crop = false;
{%- if inactive_opacity|default(false) %}inactive-opacity = {{ inactive_opactity }}{% endif %}
active-opacity = 1.0;
frame-opacity = 0.7;
inactive-opacity-override = false;
inactive-dim = 0.2;
blur-kern = "{{ blur_kernel }}";
blur-background-exclude = [ "window_type = 'dock'", "window_type = 'desktop'" ];
fading = {{ fading }};
fade-in-step = {{ fade_in_step }};
fade-out-step = {{ fade_out_step|default(fade_in_step) }};
fade-exclude = [ ];
backend = "{{ backend }}";
mark-wmwin-focused = true;
mark-ovredir-focused = true;
detect-rounded-corners = true;
detect-client-opacity = true;
refresh-rate = 0;
vsync = {{ vsync|default('false') }};
dbe = false;
focus-exclude = [ "class_g = 'Cairo-clock'" ];
detect-transient = true;
detect-client-leader = true;
invert-color-include = [ ];
glx-copy-from-front = false;
use-damage = true;
wintypes :
{
  tooltip :
  {
    fade = true;
    shadow = false;
    opacity = 0.82;
    focus = true;
  };
  dock : { shadow = false; };
  dnd : { shadow = false; };
  pop_menu : { opacity = {{ menu_opacity }} };
  dropdown_menu : { opacity = {{ menu_opacity }} };
};
inactive-dim-fixed = false;
no-fading-openclose = false;
opacity-rule = ["92:class_g='Neovide'"];

rules = (
{% for clazz in drop_down_classes %}
  { match = "class_i = '{{ clazz }}'"; animations = (
      { triggers = [ "open", "show" ];
      preset = "fly-in";
      direction = "up";
      },

      { triggers = [ "close", "hide" ];
      preset = "fly-out";
      direction = "up";
      },
      )
  },
)
